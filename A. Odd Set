//https://codeforces.com/problemset/problem/1542/A
#include <bits/stdc++.h>
using namespace std;
 
int main() {
    int t;
    cin >> t;
 
    while(t--) {
        int n;
        cin >> n;
        int e=0,o=0; 
 
        for(int i=0;i<2*n;i++) {
            int x;
            cin >> x;
            if(x%2==0)
            {
                e++;
            }
            else 
            {
                o++;
            }
        }
 
        if(e==n&&o==n) cout << "Yes\n";
        else cout << "No\n";
    }
 
    return 0;
}
