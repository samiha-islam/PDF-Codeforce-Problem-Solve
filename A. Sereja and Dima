//https://codeforces.com/problemset/problem/381/A
#include<bits/stdc++.h>
using namespace std;
int main()
{
int n;
cin>>n;
vector<int>cards(n);
for(int i=0;i<n;i++)
{
    cin>>cards[i];
}
int Sereja =0,Dima =0;
int l=0,r=n-1;
int t=0;

while(l<=r)
{
    int picked;
    if(cards[l]>cards[r])
    {
       picked=cards[l];
       l++;
    }
    else
    {
        picked=cards[r];
    r--; 
    }
       
    if(t==0)
    {
       Sereja+= picked;
    }
    else
    {
      Dima+= picked;
    }
    t=1-t;

}

cout<< Sereja<<" "<<Dima<<endl;

return 0;
}
